<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
    <% if product.quantity < 1 %>
      <span class="btn btn-danger"> Sold Out</span>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' , :disabled => @is_disabled,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>
